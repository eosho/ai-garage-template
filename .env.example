# API Settings
APP_NAME="Janus Processor"
ENVIRONMENT=development

# Janus API Settings
JANUS_BASE_URL=https://janus-api.example.com
JANUS_CONSUMER_ID=your-consumer-id
JANUS_API_KEY=your-api-key

# Azure Storage Settings
STORAGE_ACCOUNT=your-storage-account
STORAGE_CONTAINER=camera-frames

# Azure Service Bus Settings
SERVICEBUS_NAMESPACE=your-servicebus-namespace
SERVICEBUS_QUEUE=store-events

# Store Processing Configuration
STORE_IDS=["store1", "store2", "store3"]
CYCLE_INTERVAL=60  # seconds between processing cycles
PROCESSOR_ID=processor-1

# Worker Settings
MAX_WORKER_COUNT=100
WORKER_COUNT=5

# Rate Limiting Settings
STORE_RATE_LIMIT=5.0
CAMERA_RATE_LIMIT=2.0
MAX_CONCURRENT_STORES=10
MAX_CONCURRENT_CAMERAS=5

# Azure Authentication (for managed identity)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# CosmosDB settings
COSMOSDB_ENDPOINT=your-cosmosdb-endpoint
COSMOSDB_DATABASE=your-cosmosdb-database
COSMOSDB_CONTAINER=your-cosmosdb-container

# Clip Settings
MAX_CLIP_DURATION=30
MAX_CLIP_SIZE=52428800
